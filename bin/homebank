#!/bin/bash
set -e

[[ -z $IMAGE ]] && IMAGE="mauchede/homebank"
[[ -z $TAG ]] && TAG="5.0.5"

docker run \
    $(env | cut -d= -f1 | awk '{print "-e", $1}') \
    --net=host \
    --rm \
    -v /etc/group:/etc/group:ro \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/localtime:/etc/localtime:ro \
    -v /run:/run \
    -v /tmp:/tmp \
    -v $HOME:$HOME \
    -ti $IMAGE:$TAG "$@"
